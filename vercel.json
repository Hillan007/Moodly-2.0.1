{
  "version": 2,
  "name": "moodly-mental-health-app",
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth.py"
    },
    {
      "src": "/api/mood",
      "dest": "/api/mood.py"
    },
    {
      "src": "/api/insights/(.*)",
      "dest": "/api/insights.py"
    },
    {
      "src": "/api/music/(.*)",
      "dest": "/api/music.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "FLASK_SECRET_KEY": "@flask_secret_key",
    "OPENAI_API_KEY": "@openai_api_key",
    "SPOTIFY_CLIENT_ID": "@spotify_client_id",
    "SPOTIFY_CLIENT_SECRET": "@spotify_client_secret"
  }
}
